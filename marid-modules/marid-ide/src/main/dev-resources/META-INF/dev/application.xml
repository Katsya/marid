<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="org.marid"/>
    <context:property-placeholder ignore-resource-not-found="true" location="ide.properties"/>
    <context:property-placeholder ignore-resource-not-found="true" location="meta.properties"/>

    <!-- Parameter passing -->

    <bean class="org.marid.spring.xml.BeanData" name="beanData"/>
    <bean class="org.marid.ide.project.ProjectProfile" name="profile">
        <constructor-arg name="name" value="default"/>
    </bean>
    <bean factory-bean="profile" factory-method="getBeansDirectory" name="beanFilePath"/>
    <bean class="java.lang.String" name="triggerType">
        <constructor-arg name="original" value="init"/>
    </bean>
</beans>