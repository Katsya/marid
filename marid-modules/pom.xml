<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation=" http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>org.marid</groupId>
        <artifactId>marid</artifactId>
        <version>0.8.5.2-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>marid-modules</artifactId>
    <packaging>pom</packaging>

    <modules>
        <module>marid-lib</module>
        <module>marid-swing</module>
        <module>marid-gres</module>
        <module>marid-runtime</module>
        <module>marid-ide-lib</module>
        <module>marid-swing-ide</module>
        <module>marid-gui</module>
        <module>marid-ide</module>
        <module>marid-site</module>
        <module>marid-site-standalone</module>
    </modules>

    <dependencies>
        <dependency>
            <groupId>org.marid</groupId>
            <artifactId>marid-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <systemPropertyVariables>
                        <java.util.logging.config.class>org.marid.test.logging.AllLogs</java.util.logging.config.class>
                    </systemPropertyVariables>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>benchmark</id>

            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-failsafe-plugin</artifactId>
                        <configuration>
                            <systemPropertyVariables>
                                <java.util.logging.config.class>org.marid.test.logging.AllLogs</java.util.logging.config.class>
                            </systemPropertyVariables>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>