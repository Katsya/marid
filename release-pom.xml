<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.marid</groupId>
  <artifactId>marid</artifactId>
  <version>0.6</version>
  <packaging>pom</packaging>
  <name>marid</name>
  <description>Data acquisition and visualization system</description>
  <url>http://sf.net/projects/marid</url>
  <inceptionYear>2012</inceptionYear>
  <organization>
    <name>MARID software development group</name>
    <url>http://marid.sf.net</url>
  </organization>
  <licenses>
    <license>
      <name>GNU Affero General Public License version 3.0</name>
      <url>http://www.gnu.org/licenses/agpl-3.0.html</url>
    </license>
  </licenses>
  <developers>
    <developer>
      <id>dmovc</id>
      <name>Dmitry Ovchinnikov</name>
      <email>d.ovchinnikow@gmail.com</email>
      <roles>
        <role>Project Lead</role>
      </roles>
      <timezone>+3</timezone>
    </developer>
  </developers>
  <prerequisites>
    <maven>3.1</maven>
  </prerequisites>
  <modules>
    <module>marid-modules</module>
    <module>marid-test</module>
    <module>marid-site</module>
    <module>marid-site-standalone</module>
  </modules>
  <scm>
    <connection>scm:git:git://git.code.sf.net/p/marid/code</connection>
    <developerConnection>scm:git:https://git.code.sf.net/p/marid/code</developerConnection>
    <url>http://sf.net/p/marid/code</url>
  </scm>
  <distributionManagement>
    <repository>
      <id>marid</id>
      <name>frs</name>
      <url>sftp://frs.sf.net/home/frs/project/marid/repo</url>
    </repository>
    <site>
      <id>marid-web</id>
      <name>web</name>
      <url>scp://shell.sf.net/home/project-web/marid/htdocs</url>
    </site>
  </distributionManagement>
  <properties>
    <excluded.tests>org.marid.test.SlowTests</excluded.tests>
    <implementation.version>0.6-SNAPSHOT</implementation.version>
    <specification.version>0.6-SNAPSHOT</specification.version>
    <scripting>groovy</scripting>
    <jetty.version>9.0.5.v20130815</jetty.version>
    <implementation.vendor>MARID software development group</implementation.vendor>
    <excluded.benchmarks>org.marid.test.SlowBenchmarks</excluded.benchmarks>
    <specification.vendor>MARID software development group</specification.vendor>
    <maven.compiler.target>1.7</maven.compiler.target>
    <specification.title>marid</specification.title>
    <catalina.version>7.0.42</catalina.version>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <lib>/home/dmitry/marid-code/target/lib</lib>
    <implementation.title>Data acquisition and visualization system</implementation.title>
    <groovy.version>2.1.9</groovy.version>
    <maven.compiler.source>1.7</maven.compiler.source>
  </properties>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.11</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.hamcrest</groupId>
      <artifactId>hamcrest-core</artifactId>
      <version>1.3</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <repositories>
    <repository>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>central</id>
      <name>Central Repository</name>
      <url>http://repo.maven.apache.org/maven2</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <releases>
        <updatePolicy>never</updatePolicy>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>central</id>
      <name>Central Repository</name>
      <url>http://repo.maven.apache.org/maven2</url>
    </pluginRepository>
  </pluginRepositories>
  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <scriptSourceDirectory>/home/dmitry/marid-code/src/main/scripts</scriptSourceDirectory>
    <testSourceDirectory>src/test/java</testSourceDirectory>
    <outputDirectory>target/classes</outputDirectory>
    <testOutputDirectory>target/test-classes</testOutputDirectory>
    <extensions>
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
        <artifactId>wagon-ssh</artifactId>
        <version>2.4</version>
      </extension>
    </extensions>
    <resources>
      <resource>
        <filtering>false</filtering>
        <directory>src/main/resources</directory>
        <excludes>
          <exclude>**/*.properties</exclude>
        </excludes>
      </resource>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
        <includes>
          <include>**/*.properties</include>
        </includes>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <filtering>false</filtering>
        <directory>src/test/resources</directory>
        <excludes>
          <exclude>**/*.properties</exclude>
        </excludes>
      </testResource>
      <testResource>
        <filtering>true</filtering>
        <directory>src/test/resources</directory>
        <includes>
          <include>**/*.properties</include>
        </includes>
      </testResource>
    </testResources>
    <directory>target</directory>
    <finalName>marid-0.6</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-changelog-plugin</artifactId>
        <version>2.2</version>
        <extensions>false</extensions>
      </plugin>
      <plugin>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.4.1</version>
        <extensions>false</extensions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>wagon-maven-plugin</artifactId>
        <version>1.0-beta-4</version>
        <extensions>false</extensions>
        <configuration>
          <serverId>marid</serverId>
          <fromDir>target</fromDir>
          <includes>*.zip,*.tar.gz,*.tar.bz2</includes>
          <url>sftp://frs.sf.net</url>
          <toDir>/home/frs/project/marid/${project.version}</toDir>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>versions-maven-plugin</artifactId>
        <version>2.1</version>
        <extensions>false</extensions>
        <configuration>
          <generateBackupPoms>false</generateBackupPoms>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <reporting>
    <outputDirectory>target/site</outputDirectory>
  </reporting>
</project>
