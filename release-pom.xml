<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.marid</groupId>
  <artifactId>marid</artifactId>
  <version>0.1.11</version>
  <packaging>pom</packaging>
  <name>marid</name>
  <description>Data acquisition and visualization system</description>
  <url>http://sf.net/projects/marid</url>
  <licenses>
    <license>
      <name>GNU Affero General Public License version 3.0</name>
      <url>http://www.gnu.org/licenses/agpl-3.0.html</url>
    </license>
  </licenses>
  <developers>
    <developer>
      <id>dmovc</id>
      <name>Dmitry Ovchinnikov</name>
      <email>d.ovchinnikow@gmail.com</email>
      <roles>
        <role>Project Lead</role>
      </roles>
      <timezone>+4</timezone>
    </developer>
  </developers>
  <modules>
    <module>marid-runtime</module>
    <module>marid-lib</module>
    <module>marid-ide</module>
  </modules>
  <scm>
    <connection>scm:git:git://git.code.sf.net/p/marid/code</connection>
    <developerConnection>scm:git:ssh://git.code.sf.net/p/marid/code</developerConnection>
  </scm>
  <distributionManagement>
    <repository>
      <id>marid</id>
      <name>frs</name>
      <url>sftp://frs.sf.net/home/frs/project/marid/deploy</url>
    </repository>
    <site>
      <id>marid-web</id>
      <name>web</name>
      <url>scp://shell.sf.net/home/project-web/marid/htdocs</url>
    </site>
  </distributionManagement>
  <properties>
    <netbeans.hint.license>marid-agpl30</netbeans.hint.license>
    <marid.version>0.1.11-SNAPSHOT</marid.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.11</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.hamcrest</groupId>
      <artifactId>hamcrest-core</artifactId>
      <version>1.3</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <repositories>
    <repository>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>central</id>
      <name>Central Repository</name>
      <url>http://repo.maven.apache.org/maven2</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <releases>
        <updatePolicy>never</updatePolicy>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>central</id>
      <name>Central Repository</name>
      <url>http://repo.maven.apache.org/maven2</url>
    </pluginRepository>
  </pluginRepositories>
  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <scriptSourceDirectory>/home/dmitry/maridProjects/marid/src/main/scripts</scriptSourceDirectory>
    <testSourceDirectory>src/test/java</testSourceDirectory>
    <outputDirectory>target/classes</outputDirectory>
    <testOutputDirectory>target/test-classes</testOutputDirectory>
    <extensions>
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
        <artifactId>wagon-ssh</artifactId>
        <version>2.3</version>
      </extension>
    </extensions>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <directory>src/test/resources</directory>
      </testResource>
    </testResources>
    <directory>target</directory>
    <plugins>
      <plugin>
        <artifactId>maven-changelog-plugin</artifactId>
        <version>2.2</version>
        <extensions>false</extensions>
      </plugin>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>2.6</version>
        <extensions>false</extensions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>wagon-maven-plugin</artifactId>
        <version>1.0-beta-4</version>
        <extensions>false</extensions>
        <configuration>
          <serverId>marid</serverId>
          <fromDir>target</fromDir>
          <includes>*.zip,*.tar.gz,*.tar.bz2</includes>
          <url>sftp://frs.sf.net</url>
          <toDir>/home/frs/project/marid/${project.version}</toDir>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <reporting>
    <outputDirectory>target/site</outputDirectory>
  </reporting>
</project>
