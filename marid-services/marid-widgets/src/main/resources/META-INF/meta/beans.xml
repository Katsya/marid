<beans xmlns="http://www.springframework.org/schema/beans">

    <bean name="timer" class="java.util.concurrent.ScheduledThreadPoolExecutor" abstract="true" destroy-method="shutdown">
        <description>Timer</description>

        <constructor-arg name="corePoolSize" type="int" value="1"/>

        <meta key="icon" value="P_ADD"/>
    </bean>

    <bean name="simpleGraphWidgetProperties" class="org.marid.hmi.db.SimpleGraphWidgetProperties" abstract="true">
        <description>Simple graph properties</description>

        <meta key="icon" value="P_ADD"/>
    </bean>

    <bean name="simpleGraphWidget" class="org.marid.hmi.db.SimpleGraphWidget" abstract="true">
        <description>Simple graph widget</description>

        <meta key="icon" value="P_ADD"/>
    </bean>

</beans>