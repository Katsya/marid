<beans xmlns="http://www.springframework.org/schema/beans">

    <bean name="timer" class="java.util.concurrent.ScheduledThreadPoolExecutor" destroy-method="shutdown">
        <description>Timer</description>

        <constructor-arg name="corePoolSize" type="int" value="1"/>

        <meta key="icon" value="P_ADD"/>
    </bean>

    <bean name="simpleGraphWidgetProperties" class="org.marid.hmi.db.SimpleGraphWidgetProperties">
        <description>Simple graph properties</description>

        <meta key="icon" value="P_ADD"/>
    </bean>

    <bean name="simpleGraphWidget" class="org.marid.hmi.db.SimpleGraphWidget">
        <description>Simple graph widget</description>

        <constructor-arg name="timer" value=""/>
        <constructor-arg name="reader" value=""/>
        <constructor-arg name="conf" value=""/>

        <meta key="icon" value="P_ADD"/>
    </bean>

    <bean name="hmiScreen" class="org.marid.hmi.screen.HmiScreen">
        <description>HMI screen</description>
    </bean>

    <bean name="hmiScreenScene" class="javafx.scene.Scene">
        <description>HMI screen scene</description>

        <constructor-arg name="root" type="javafx.scene.Parent" ref="hmiScreen"/>
        <constructor-arg name="width" type="double" value="800"/>
        <constructor-arg name="height" type="double" value="600"/>
    </bean>

    <bean name="hmiScreenStage" class="javafx.stage.Stage">
        <description>HMI screen stage</description>

        <property name="scene" ref="hmiScreenScene"/>
        <property name="title" value="HMI screen"/>
    </bean>
</beans>